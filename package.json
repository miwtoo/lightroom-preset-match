    "e2e:headed": "playwright test --headed",
    "prepare": "husky"
  },
  "dependencies": {
    "next": "16.1.1",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3",
    "@playwright/test": "^1.58.0",
    "@types/node": "20",
    "@types/react": "19",
    "@types/react-dom": "19",
    "autoprefixer": "10",
    "bun-types": "latest",
    "eslint": "9",
    "eslint-config-next": "16.1.1",
    "husky": "^9.1.7",
    "postcss": "8",
    "tailwindcss": "3.4.17",
    "typescript": "5"
  }
}
